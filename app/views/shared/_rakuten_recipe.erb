<div class = "container" >
    <div class = "menu_name mt-3 text-center" >
        <h3>料理名</h3>
        <h4 class = "mt-3">
            <%= link_to @rakuten_recipe_title, @rakuten_recipe_url, class:"text-warning" %>
        </h4>
        <p><%= link_to "from 楽天レシピ", @rakuten_recipe_url, class:"text-dark"%>
            <span><%= link_to "#{@rakuten_recipe_person}さん", @rakuten_recipe_url, class:"text-dark"%></span>
        </P>
    </div>
    <% if @rakuten_recipe_img.present? %>
        <%= image_tag @rakuten_recipe_img.to_s, class:"menu_image" %>
    <% end %>
    <%if @rakuten_recipe_items.present? %>
        <div class = "menu_ingredient mt-5" >
            <h4>材料</h4>
            <% @rakuten_recipe_items.each do |item|%>
                <ul>
                    <li>
                    <p><%= item %></p>
                    </li>
                </ul>
            <% end %>
        </div>
    <%end%>
    <% if @rakuten_recipe_memo.present?%>
        <div class = "menu_memo mt-5" >
            <h5>お料理メモ</h5>
            <p><%= @rakuten_recipe_memo %></p>
        </div>
    <% end %>
    <div class = "menu_url mt-5" >
        <h5>レシピURL </br></br>
            <%= link_to "作り方はこちら", @rakuten_recipe_url, class:"text-center"%>
        </h5>
    </div>
</div>