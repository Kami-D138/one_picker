<div class = "container mt-5"> 
  <div class="row justify-content-center align-items-center">
    <div class="col-md-6 registration_form">
      <div class="col-md-12">
        <h3 class="registration_text text-center text-info">Sign Up</h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "shared/error_messages", object: f.object %>

          <div class="form-group">
            <%= f.label :ニックネーム, class:"text-info" %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :メールアドレス, class:"text-info" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :パスワード, class:"text-info" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :パスワード確認, class:"text-info" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit "Sign up", class: "btn btn-info btn-md" %>
          </div>
        <% end %>

        <div id="regiform-link" class="text-right">
          <p>登録済みの方はこちら</p>
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
