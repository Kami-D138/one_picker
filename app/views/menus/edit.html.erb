<h1>レシピ編集</h1>
<%= form_for(@menu) do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="field">
    <%= f.label :料理名 %><br/>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="ingredient">
    <p>材料</p>
    <%= f.fields_for :ingredients do |ingredient| %>
      <div class="field">
        <%= render "shared/ingredient_fields", f: ingredient%>
          <div class="links">
            <%= link_to_add_association "材料追加", f , :ingredients, partial: 'shared/ingredient_fields' %>
          </div>
      </div>
    <% end %>
  </div>
  
</br>
  <div class="step">
    <p>調理方法</p>
    <%= f.fields_for :preparations do |preparation| %>
      <div class="field">
        <%= render "shared/preparation_fields", f: preparation %>
          <div class="links">
            <%= link_to_add_association "手順追加", f , :preparations, partial: 'shared/preparation_fields' %>
          </div>
      </div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :ひとこと %><br/>
    <%= f.text_field :memo%>
  </div>

  <div class="field"> 
  <%= f.label :ジャンル1 %><br/>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
</div>
  
  <div class="field"> 
    <%= f.label :ジャンル2%><br/>
    <%= f.collection_select :type_id, Type.all, :id, :name, include_blank: "選択して下さい" %>
  </div>

  <div class="field"> 
    <%= f.label :画像 %><br/>
    <%= f.file_field :image %>
  </div>

  <div class="btn">
    <%= f.submit "編集", class: "btn btn-primary" %>
  </div>
<% end %>