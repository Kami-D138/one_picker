<%= form_for(@menu) do |f| %>
  <div class = "container">
    <div class="row justify-content-center align-items-center">
      <div class="col-md-8 shadow-sm p-3 my-5 bg-white rounded">
        <div class="col-md-12">
          <%= render "shared/error_messages", object: f.object %>
          <%= render "shared/menu_post_form", f: f%>
          <div class="btns mt-5 text-center">
            <%= f.submit "完了", class: "btn btn-primary mr-5 col-3"%>
            <%= link_to "削除", menu_path(@menu.id), method: :delete,
                                    data: {confirm: "削除してよろしいですか？"}, class: "btn btn-danger ml-5 col-3"%>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>