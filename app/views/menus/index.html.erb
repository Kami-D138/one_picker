<h1>献立一覧</h1>
<%= flash[:success] %>

<div class = "menu-contents">
  <% @menus.each do |menu| %>
    <ol id = "menu-<%= menu.id %>">

    <div class = "menu-body">
      <span class=  "menu_name">
        <%= link_to menu.name, menu_path(menu.id) %>
      </span> </br>

      <span class = "menu_ingredient">
        <% @ingredients = Ingredient.where(menu_id: menu.id)%>
        <% @ingredients.each do |ingredient|%>
          <%= link_to ingredient.item, menu_path(menu.id) %> 
        <% end %>
      </span></br>
    </div>
    
    <% if menu.image.present? %>
      <%= image_tag menu.image.to_s, class:"menu_pic" %>
      </br>
    <% end %>

      <span class = "timestamp">
        <%= l menu.created_at, format: :short %>
      </span>

      <%= link_to "編集", edit_menu_path(menu.id)%>

      <%= link_to "削除", menu_path(menu.id), method: :delete %>
    </ol>

  <% end %>
</div>

<div>
  <%= link_to "レシピ投稿", "/menus/new", class: "btn btn-outline-info" %>
</div>