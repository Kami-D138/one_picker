<div class = "container my-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-10">
            <div class="col-12">
                <%= paginate @users %>
                <table class="table table-hover border-left border-right border-bottom my-5">
                    <thead>
                        <tr>
                            <th scope="col">User-ID</th>
                            <th scope="col">ユーザ名</th>
                            <th scope="col">編集</th>
                        </tr>
                    </thead>
                    <% @users.each do |user|%>
                        <tbody>
                            <tr>
                                <th scope= "row"><%= link_to user.id, admin_path(user.id), class:"text-dark" %></th>
                                <td><%= link_to user.name, admin_path(user.id), class:"text-secondary"%></td>
                                <td> 
                                    <% unless user.admin == true && !current_user = false %>
                                        <%= link_to "削除", admin_path(user.id), method: :delete,
                                                                    data: {confirm: "ユーザーを削除しますか？"}, class:"text-danger"%>
                                    <% end %> 
                                </td>
                            </tr>
                        </tbody>
                    <% end %>
                </table>
                <%= paginate @users %>
            </div>
        </div>
    </div>
</div>