<div class = "container my-5">
    <table class="table table-hover border-left border-right border-bottom">
        <thead>
            <tr>
                <th scope="col">User-ID</th>
                <th scope="col">Name</th>
                <th scope="col">編集</th>
            </tr>
        </thead>
        <% @users.each do |user|%>
            <tbody>
                <tr>
                    <th scope= "row"><%= link_to user.id, admin_path(user.id), class:"text-dark" %></th>
                    <td><%= link_to user.name, admin_path(user.id) %></td>
                    <td> 
                        <% unless user.admin == true && !current_user = false %>
                            <%= link_to "削除", admin_path(user.id), method: :delete,
                                                        data: {confirm: "ユーザーを削除しますか？"}, class:"text-danger"%>
                        <% end %> 
                    </td>
                </tr>
            </tbody>
        <% end %>
    </table>
</div>