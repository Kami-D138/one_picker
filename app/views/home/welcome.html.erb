<div class = "btns container mt-5 mx-auto" style="width: 400px;">
    <% unless user_signed_in?%>
        <%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline-warning" %>
        <%= link_to "ログイン",new_user_session_path, class: "btn btn-outline-primary" %>
        <%= link_to "登録せずPickApp", home_top_path, class: "btn btn-outline-secondary" %>
    <% else %>
        <%= link_to "ログアウト",destroy_user_session_path, method: :delete,
                                                    data: {confirm: "ログアウトしますか？"}, class: "btn btn-outline-danger" %>
        <%= link_to "PickApp", home_top_path, class: "btn btn-outline-primary" %>
    <% end %>
</div>
